{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "types": [
      "node"
    ],
    "declaration": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": [
    "./src/**/*"
  ]
}